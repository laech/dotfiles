# /usr/lib/systemd/system/disable-ir.service

[Unit]
Description=Disable IR Receiver

[Service]
Type=oneshot
ExecStart=/usr/bin/cat                  /sys/bus/usb/devices/4-5/product
ExecStart=/usr/bin/bash -c 'echo 0    > /sys/bus/usb/devices/4-5/power/autosuspend_delay_ms'
ExecStart=/usr/bin/bash -c 'echo auto > /sys/bus/usb/devices/4-5/power/control'
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
