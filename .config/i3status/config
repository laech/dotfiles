general {
  output_format = "i3bar"
  interval = 10
}

order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "time"

wireless _first_ {
  format_up = "W: (%essid) %ip"
  format_down = "W: down"
}

ethernet _first_ {
  format_up = "E: %ip"
  format_down = "E: down"
}

volume master {
  format = "V: %volume"
  format_muted = "V: muted"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

time {
  format = "%A %F %I:%M %p"
}
