# i3 config file
# https://i3wm.org/docs/userguide.html

set $mod Mod3

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:sans bold 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec ~/.local/bin/term
bindsym $mod+Shift+Return exec ~/.local/bin/term -rv

bindsym $mod+Shift+w kill

bindsym $mod+semicolon exec --no-startup-id rofi -show run
bindsym Mod4+F12 exec --no-startup-id rofi -show run

# change focus
bindsym $mod+Left    focus left
bindsym $mod+Down    focus down
bindsym $mod+Up      focus up
bindsym $mod+Right   focus right
bindsym $mod+h       focus left
bindsym $mod+j       focus down
bindsym $mod+k       focus up
bindsym $mod+l       focus right

# move focused window
bindsym $mod+Shift+Left    move left
bindsym $mod+Shift+Down    move down
bindsym $mod+Shift+Up      move up
bindsym $mod+Shift+Right   move right
bindsym $mod+Shift+h       move left
bindsym $mod+Shift+j       move down
bindsym $mod+Shift+k       move up
bindsym $mod+Shift+l       move right

# split via '-' and '|'
bindsym $mod+backslash split h
bindsym $mod+minus     split v

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+space layout toggle tabbed splith splitv stacked

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

bindsym $mod+Tab workspace next_on_output

workspace_auto_back_and_forth yes
workspace_layout tabbed

bindsym $mod+q exec --no-startup-id xset dpms force off

bindsym $mod+Shift+c exec --no-startup-id i3 reload
bindsym $mod+Shift+r exec --no-startup-id i3 restart
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# class                 border  backgr. text    indicator child_border
client.focused          #000000 #01579b #ffffff #2e9ef4   #000000
client.focused_inactive #000000 #000000 #999999 #484e50   #000000
client.unfocused        #000000 #000000 #999999 #292d2e   #000000
client.urgent           #b00020 #b00020 #ffffff #900000   #000000
client.placeholder      #0c0c0c #0c0c0c #ffffff #000000   #0c0c0c
client.background       #ffffff

set $mode_focus Focus:  <b>f</b>irefox  <b>t</b>erm  <b>e</b>macs  <b>v</b>scode
bindsym $mod+o mode "$mode_focus"
mode --pango_markup "$mode_focus" {

    # Use xprop to find these
    bindsym f [class="(?i)firefox"] focus; mode "default"
    bindsym t [class="(?i)xterm"] focus; mode "default"
    bindsym e [class="(?i)emacs"] focus; mode "default"
    bindsym v [class="(?i)code-oss"] focus; mode "default"
    bindsym Escape mode "default"
    bindsym $mod+g mode "default"
}

bindsym $mod+m bar mode toggle
bar {
    colors {
        background #000000
        statusline #ffffff
        separator #999999

        # class            border  backgr. text
        focused_workspace  #01579b #01579b #ffffff
        active_workspace   #000000 #000000 #ffffff
        inactive_workspace #000000 #000000 #888888
        urgent_workspace   #e53935 #e53935 #ffffff
        binding_mode       #00897b #00897b #ffffff
    }

    # position top
    separator_symbol " | "
    status_command i3status
    font pango:sans 8

    modifier none
    # mode hide
    # Disable switching workspace on scroll
    bindsym button4 nop
    bindsym button5 nop
}

# Disable mouse focus and switch window on scroll
focus_follows_mouse no
bindsym button4 nop
bindsym button5 nop

bindsym XF86MonBrightnessDown      exec --no-startup-id backlight -5 && backlight > ~/.brightness
bindsym XF86MonBrightnessUp        exec --no-startup-id backlight +5 && backlight > ~/.brightness
bindsym Mod1+XF86MonBrightnessDown exec --no-startup-id backlight -2 && backlight > ~/.brightness
bindsym Mod1+XF86MonBrightnessUp   exec --no-startup-id backlight +2 && backlight > ~/.brightness

bindsym XF86AudioRaiseVolume   exec --no-startup-id ~/.local/bin/volume +5
bindsym XF86AudioLowerVolume   exec --no-startup-id ~/.local/bin/volume -5
bindsym XF86AudioMute          exec --no-startup-id ~/.local/bin/volume-mute-toggle

hide_edge_borders both

# See https://i3wm.org/docs/userguide.html#command_criteria
# Inspect with xprop
for_window [class=".*"] title_format " %title"
for_window [title="Volume Control"] floating enable border normal
for_window [window_role="GtkFileChooserDialog"] floating disable

# Idle 5 minutes will dim display, then 5 seconds later lock
# it. Locking will wake up screen, so 5 seconds later (total dpms 310)
# again to turn it off.
exec_always --no-startup-id xset s 300 5
exec_always --no-startup-id xset dpms 310 310 310
exec --no-startup-id xss-lock \
     --notifier='bash /usr/share/doc/xss-lock/dim-screen.sh' \
     -- i3lock --nofork --color=333333

# Authentication agent required by some apps such as firewall-applet
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
exec --no-startup-id cbatticon &
exec --no-startup-id pasystray &
exec --no-startup-id nm-applet &
exec --no-startup-id firewall-applet &

exec xbacklight -set $(cat ~/.brightness 2> /dev/null || 10)

exec systemd-run --user \
     --timer-property=OnCalendar=minutely \
     --unit=i3-notify-battery-low \
     ~/.local/bin/i3-notify-battery-low

exec hsetroot -solid '#aaaaaa'

exec_always --no-startup-id xrdb -merge -I"${HOME}" ~/.Xresources
exec_always --no-startup-id find ~/.profiles/default/init/ -name '*.sh' -exec {} \;
