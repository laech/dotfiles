# i3 config file
# https://i3wm.org/docs/userguide.html

set $mod Mod3

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:sans bold 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec ~/.local/bin/term
bindsym $mod+Shift+Return exec ~/.local/bin/term -rv

# kill focused window
bindsym $mod+Shift+q kill

bindsym Control+space exec --no-startup-id \
    rofi \
    -show combi \
    -sort \
    -matching fuzzy \
    -show-icons \
    -width -80

bindsym $mod+space exec --no-startup-id \
    rofi \
    -show combi \
    -sort \
    -matching fuzzy \
    -show-icons \
    -width -80

# change focus
bindsym $mod+Left    focus left
bindsym $mod+Down    focus down
bindsym $mod+Up      focus up
bindsym $mod+Right   focus right

# move focused window
bindsym $mod+Shift+Left    move left
bindsym $mod+Shift+Down    move down
bindsym $mod+Shift+Up      move up
bindsym $mod+Shift+Right   move right

# split via '-' and '|'
bindsym $mod+backslash split h
bindsym $mod+minus     split v

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+w layout tabbed
bindsym $mod+l layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

bindsym $mod+Tab workspace next_on_output

workspace_auto_back_and_forth yes

bindsym $mod+q       exec --no-startup-id ~/.local/bin/lock
bindsym $mod+Shift+c exec --no-startup-id i3 reload
bindsym $mod+Shift+r exec --no-startup-id i3 restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

bar {
        status_command i3status
        font pango:sans 8
#        colors {
#                #class             border  background text
#                focused_workspace  #626270 #626270    #ffffff
#                active_workspace   #000000 #000000    #ffffff
#                inactive_workspace #000000 #000000    #888888
#                urgent_workspace   #900000 #900000    #ffffff
#                binding_mode       #E65100 #E65100    #ffffff
#        }

        modifier none
        # mode hide
        # Disable switching workspace on scroll
        bindsym button4 nop
        bindsym button5 nop
}
bindsym $mod+m bar mode toggle

# class                 border  backgr. text    indicator child_border
#client.focused          #626270 #626270 #ffffff #626270   #33333d
#client.focused_inactive #33333d #33333d #888888 #33333d   #33333d
#client.unfocused        #33333d #33333d #888888 #33333d   #33333d
#client.urgent           #2f343a #900000 #ffffff #2f343a   #2f343a
#client.placeholder      #0c0c0c #0c0c0c #ffffff #0c0c0c   #0c0c0c
#client.background       #ffffff

# Disable mouse focus and switch window on scroll
focus_follows_mouse no
bindsym button4 nop
bindsym button5 nop

bindsym XF86MonBrightnessDown exec --no-startup-id ~/.local/bin/backlight -3
bindsym XF86MonBrightnessUp   exec --no-startup-id ~/.local/bin/backlight +3

bindsym XF86AudioRaiseVolume   exec --no-startup-id ~/.local/bin/volume +5
bindsym XF86AudioLowerVolume   exec --no-startup-id ~/.local/bin/volume -5
bindsym XF86AudioMute          exec --no-startup-id ~/.local/bin/volume-mute-toggle

#hide_edge_borders both
#default_border pixel

for_window [title="Volume Control"] floating enable border normal

exec --no-startup-id numlockx on
exec --no-startup-id feh --bg-fill --randomize ~/wallpapers
exec --no-startup-id xss-lock -- i3lock --color=333333
