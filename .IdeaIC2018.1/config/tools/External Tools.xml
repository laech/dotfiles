      <option name="WORKING_DIRECTORY" value="$ModuleFileDir$" />
    </exec>
  </tool>
  <tool name="Open in Terminal" showInMainMenu="true" showInEditor="true" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="false" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="false">
