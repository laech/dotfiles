
Host *.sli-systems.net *.sli.io *.globalbrain.net
  LogLevel ERROR
  PubkeyAcceptedKeyTypes +ssh-dss
  ServerAliveInterval 60
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null

Match user gbrain host *.sli-systems.net,*.sli.io,*.globalbrain.net
  IdentityFile ~/.ssh/gbrain_id_dsa

Match user root host *.sli-systems.net,*.sli.io
  ProxyCommand ssh -o ForwardAgent=yes gbrain@mcbain.globalbrain.net 'echo Forwarded connection to mcbain. 1>&2 && ssh-add ~gbrain/search_production_root/identity_root && nc %h %p'
