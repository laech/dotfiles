#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
set -o xtrace

if [[ $UID == 0 ]]; then
  echo "don't run as root" 1>&2
  exit 1
fi

. "$(dirname "${BASH_SOURCE[0]}")"/setup-common

setup_packages() {
  packages=(

    # For building git-credential-libsecret
    libglib2.0-dev
    libsecret-1-dev

    build-essential
    curl
    tmux
    zsh
    vim
    emacs-nox
    shellcheck
    source-highlight
  )

  sudo apt install -y "${packages[@]}"
}

setup_git() {
  if [[ ! -f /usr/share/doc/git/contrib/credential/libsecret/git-credential-libsecret ]]; then
    sudo make --directory=/usr/share/doc/git/contrib/credential/libsecret
  fi
}

setup_packages
setup_git
setup_shfmt
setup_shell
