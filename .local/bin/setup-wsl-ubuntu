#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
set -o xtrace

if [[ $UID == 0 ]]; then
  echo "don't run as root" 1>&2
  exit 1
fi

. "$(dirname "${BASH_SOURCE[0]}")"/setup-common

setup_packages() {
  packages=(
    curl
    tmux
    zsh
    vim
    emacs-nox
    shellcheck
    source-highlight
  )

  sudo apt install -y "${packages[@]}"
}

setup_packages
setup_shfmt
setup_shell
