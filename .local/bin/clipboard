#!/usr/bin/env bash

copy() {
  if [[ -z "$DISPLAY" ]]; then
    return
  else
    xsel -ib
  fi
}

paste() {
  if [[ -z "$DISPLAY" ]]; then
    return
  else
    xsel -ob
  fi
}

[[ $# -eq 1 ]] && "$1" && exit

cat <<EOF >&2
Usage: $0 <action>
Where action could be:
      copy   copy text from stdin
      paste  paste text to stdout
EOF
exit 1
