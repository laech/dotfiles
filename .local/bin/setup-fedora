#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
set -o xtrace

if [[ $UID == 0 ]]; then
  echo "don't run as root" 1>&2
  exit 1
fi

. setup-common

setup_packages() {
  packages=(
    zsh
    tmux
    vim
    emacs
    util-linux-user
    ShellCheck
    source-highlight
    git-credential-libsecret
    seahorse
    maven
    java-1.8.0-openjdk-devel
    java-1.8.0-openjdk-src
    java-11-openjdk-devel
    java-11-openjdk-src
    cascadia-code-fonts
  )

  sudo dnf install -y "${packages[@]}"
}

setup_packages
setup_shfmt
setup_shell
