  xss-lock
  rofi
  feh

  firefox

  tmux
  xterm
  rxvt-unicode
  xsel
  zsh
  zsh-completions
  zsh-syntax-highlighting

  git

  vim
  emacs

  pulseaudio
  pavucontrol

  ttf-dejavu
  ttf-inconsolata
  ttf-liberation
  otf-font-awesome
  noto-fonts-cjk

  jdk8-openjdk
  openjdk8-src

  argyllcms
  compton
  numlockx

  ibus
